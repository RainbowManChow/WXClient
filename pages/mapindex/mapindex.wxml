<map
      id="myMap"
      style="width: 100%; height:100vh;"
      latitude="{{latitude}}"
      longitude="{{longitude}}"
      markers="{{markers}}"
      data-markers="{{markers}}"
      covers="{{covers}}"
      bindmarkertap='gotohere'
      bindregionchange="regionchange"
      circles="{{circles}}"
      show-location
    >
 <!-- 地图上下阴影 -->
      <cover-image class='map-shadow-top' src='/images/map-shadow-top.png'/>
      <cover-image class='map-shadow-btm' src='/images/map-shadow-btm.png'/>
      <!-- 顶部横幅  {{userInfo.avatarUrl}} -->
      <cover-view class='top-tips'>
        <cover-image  wx:if='{{userInfo.avatarUrl}}' class='top-icon' src='{{userInfo.avatarUrl}}'/>   
        <cover-view class='top-text' style="font-weight:bold">{{topText}}</cover-view>
      </cover-view>
      <!-- 中心坐标 -->
      <cover-image class='map-icon_point' src='/images/point_in_map.png'/>
      <!-- 控件 -->
      <cover-image class='map-icon map-icon_msg' src='/images/icon-msg.png' bindtap='unfinished'/>
      <cover-image class='map-icon map-icon_user' src='/images/icon-user.png' bindtap='toUser'/>
      <cover-image class='map-icon map-icon_reset' src='/images/reset.png' bindtap='my_location'/>
      <cover-image class='map-icon map-icon_center' src='/images/addnew.png' bindtap='goAdd'/>
      <!--屏幕背景变暗的背景  -->
    <cover-view class="commodity_screen" bindtap="hideModal" wx:if="{{showModalStatus}}"></cover-view>
    <!--弹出框  -->
    <cover-view animation="{{animationData}}" class="commodity_attr_box" wx:if="{{showModalStatus}}">
 
      <cover-view class='placeBox' bindtap="godetail">
       <cover-image style=" height: 30vh; width:30vw;left:5vw;top:2vh"  src='{{object.images}}' wx:if="{{imageone}}" />
       <cover-image style=" height: 30vh; width:30vw;left:37vw;top:2vh" src='{{object.imagestwo}}' wx:if="{{imagetwo}}"/>
       <cover-image style=" height: 30vh; width:30vw;left:69vw;top:2vh" src='/images/goto.png' wx:if="{{imagethree}}"/>
      </cover-view>
 
 
      <cover-view class='viewIcon' bindtap="godetail">
           <cover-view class="bottombutton" >{{object.time}}</cover-view>
              <cover-view class="bottombuttoright">{{object.name}}</cover-view>
      </cover-view>
 
    </cover-view>
     


    </map>

