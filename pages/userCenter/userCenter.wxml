<view class='userCenter'>
  <view class="userInfo">
      <image class='user-head' src='{{userInfo.avatarUrl}}'/>
      <view class='user-name'>{{userInfo.nickName}}</view>
  </view>

  <view class='other-info-list'>

    <navigator url='' class='list-item' bindtap='gorecentinfo'>
      <image class='left' src='/images/stroke.png'></image>
      <view class='text-list'>
        <view class='text-hd'>已发布</view>
        <view class='text-bd'>自己最近发布<text class='oColor'>{{0}}</text></view>
      </view>
      <image class='right' src='/images/arrow-right.png'></image>
    </navigator>

    <view url=' ' class='list-item' bindtap='unfinished'>
      <image class='left' src='/images/coupon.png'></image>
      <view class='text-list'>
        <view class='text-hd'>留言</view>
        <view class='text-bd'>我的留言</view>
      </view>
      <image class='right' src='/images/arrow-right.png'></image>
    </view>

    <view class='list-item' bindtap='unfinished'>
      <image class='left' src='/images/coupon.png'></image>
      <view class='text-list'>
        <view class='text-hd'>消息</view>
        <view class='text-bd'><text class='oColor'>{{0}}</text>未读消息</view>
      </view>
      <image class='right' src='/images/arrow-right.png'></image>
    </view>

  </view>
</view>

<view class='fix-footer'>
  <text>RainbowMan</text>
</view>